@model Product

<h2>@Model.Name Information</h2>

<table class="table">
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Price</th>
        <th>Category ID</th>
        <th>Sale</th>
        <th>Stock</th>
    </tr>
    
    <tr>
        <td>@Model.ProductID</td>
        <td>@Model.Name</td>
        <td>@Model.Price</td>
        <td>@Model.CategoryID</td>
        <td>@Model.OnSale</td>
        <td>@Model.Stocklevel</td>
    </tr>
</table>

<div style="display: block">
    <a href="/Product/UpdateProduct/@Model.ProductID">Update This Product</a>
</div>